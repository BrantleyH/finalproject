@page
@model finalproject.Pages.BaseballCards.AddOwnerModel

@{
    ViewData["Title"] = "Add Owner";
}

<h1>Create</h1>

<h4>Owner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Owner.BaseballCardID" class="control-label"></label>
                <select asp-for="Owner.BaseballCardID" asp-items="Model.BaseballCardsDropDown" class="form-control">
                    <option value="">--Select BaseballCard--</option> 
                </select>
                <span asp-validation-for="Owner.BaseballCardID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner.Ownership" class="control-label"></label>
                <input asp-for="Owner.Ownership" class="form-control" />
                <span asp-validation-for="Owner.Ownership" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}